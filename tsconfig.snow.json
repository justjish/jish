{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    /* noEmit - Snowpack builds (emits) files, not tsc. */
    "noEmit": true,
    "isolatedModules": true,
    /* Additional Options */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "allowJs": true,
    "esModuleInterop": false,
    // Custom
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true, // Output source maps for debugging
    "types": ["vite/client"], //Modified
    "composite": false,
    "paths": {
      // If you configured any Snowpack aliases, add them here.
      // Add this line to get types for streaming imports (packageOptions.source="remote"):
      //     "*": [".snowpack/types/*"]
      // More info: https://www.snowpack.dev/guides/streaming-imports
    },
    "experimentalDecorators": true
  },
  "include": ["src"]
}
