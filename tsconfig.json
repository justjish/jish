{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    /* noEmit - Snowpack builds (emits) files, not tsc. */
    "noEmit": true,
    "isolatedModules": true,
    /* Additional Options */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "WebWorker"],
    "allowJs": true,
    "esModuleInterop": false,
    // Custom
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true, // Output source maps for debugging
    "types": ["vite/client"], //Modified
    "composite": false,
    "paths": {
      "*": ["*"]
    },
    "experimentalDecorators": true
  },
  "include": ["src", "app", "public/worker.ts"],
  "exclude": ["node_modules", "api", "functions"]
}
