{
  "name": "jish-root",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "config/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "NODE_ENV='production' pnpx turbo run build",
    "dev": "NODE_ENV='development' pnpx turbo run dev --parallel",
    "lint": "pnpx turbo run lint",
    "typecheck": "pnpx turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md}\""
  },
  "devDependencies": {
    "prettier": "^2.8.4",
    "typescript": "4.9.5"
  },
  "pnpm": {
    "peerDependenciesRules": {
      "@remix-run/cloudflare": {
        "@cloudflare/workers-types": "|| ^2.0.0 || ^3.0.0 || ^4.20230228.0"
      },
      "@cloudflare/workers-types": "|| ^2.0.0 || ^3.0.0 || ^4.20230228.0"
    }
  },
  "overrides": {
    "@remix-run/eslint-config": {
      "peerDependencies": {
        "typescript": "4.9.5"
      }
    },
    "@remix-run/cloudflare": {
      "peerDependencies": {
        "@cloudflare/workers-types": "|| ^2.0.0 || ^3.0.0 || ^4.20230228.0"
      }
    },
    "@remix-run/cloudflare-workers": {
      "peerDependencies": {
        "@cloudflare/workers-types": "|| ^2.0.0 || ^3.0.0 || ^4.20230228.0"
      }
    },
    "remix-image@>1.3.0": {
      "peerDependencies": {
        "@cloudflare/kv-asset-handler": "^0.3.0"
      }
    },
    "remix-image": {
      "peerDependencies": {
        "@cloudflare/kv-asset-handler": "^0.3.0"
      }
    },
    "@cloudflare/kv-asset-handler": {
      "peerDependencies": {
        "@cloudflare/workers-types": "|| ^2.0.0 || ^3.0.0 || ^4.20230228.0"
      }
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "all"
  },
  "prettierignore": [
    "**/.cache",
    "**/.github",
    "**/.husky",
    "**/build",
    "**/public",
    "**/node_modules",
    "**/dist",
    "**/app/styles/tailwind.css"
  ],
  "engines": {
    "node": ">=16",
    "npm": ">=9",
    "pnpm": ">=7"
  },
  "packageManager": "pnpm@7.27.0"
}
