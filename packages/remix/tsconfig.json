{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@jish/tsconfig/base.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["@jish/cloudflare-env"],
    "allowJs": false,
    "skipLibCheck": false,
    "module": "esnext",
    "declaration": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "composite": false,
    "paths": {
      "~/*": ["./app/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true
  },
  "include": ["app", "**/*.ts", "**/*.tsx","public/scripts/*.js"],
  "exclude": ["node_modules", "**/*.js", "!public/scripts/*.js"]
}
